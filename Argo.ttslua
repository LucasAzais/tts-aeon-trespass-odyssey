function Argo.setEvolutionTrack(index, type, value)
    if not Argo.evolution_track[index] or Argo.evolution_track[index][type] == nil then return end
    if value ~= true and value ~= false then return end

    Argo.evolution_track[index][type] = value
    Argo.ui['evolution_' .. index .. '_' .. type .. '_checkbox']:setChecked(value)
    Log:debug('Evolution track section %s set to %s.', index, tostring(Argo.evolution_track[index][type]))
end

function Argo.setTitansList1(boxIndex, value)
    Argo.titans_list1[boxIndex] = value
    Argo.ui['titans_input1_line' .. boxIndex]:setText(value)
    Log:debug('Titans list 1 line %s set to %s', boxIndex, Argo.titans_list1[boxIndex])
end

function Argo.getTitansList2(boxIndex, value)
    Argo.titans_list2[boxIndex] = value
    Argo.ui['titans_input2_line' .. boxIndex]:setText(value)
    Log:debug('Titans list 2 line %s set to %s', boxIndex, Argo.titans_list2[boxIndex])
end

function Argo.setAdventureTrack(adventureName, boxIndex, value)
    if not Argo.adventure_tracks[adventureName] or not Argo.adventure_tracks[adventureName][boxIndex] == nil then return end

    if Argo.adventure_tracks[adventureName][boxIndex] == true or Argo.adventure_tracks[adventureName][boxIndex] == false then
        Argo.ui[adventureName .. '_track_input_' .. boxIndex]:setChecked(value)
        Argo.adventure_tracks[adventureName][boxIndex] = value
        Log:debug('Adventure track for [%s - space %s] set to %s', adventureName, boxIndex, tostring(value))
    else
        Argo.ui[adventureName .. '_track_input_' .. boxIndex]:setText(value)
        Argo.adventure_tracks[adventureName][boxIndex] = value
        Log:debug('Adventure track for [%s - space %d] set to %s', adventureName, boxIndex, value)
    end
end

function Argo.setResource(resourceName, value)
    if Argo.resources[resourceName] == nil then return end

    Argo.resources[resourceName] = value

    -- Only do it once on 100 (avoid unecessary sets)
    if Argo.resources[resourceName] == 100 then
        Argo.ui[resourceName .. '_button']:setFontSize(35)
        Argo.ui[resourceName .. '_button']:setWidth(70)
    elseif Argo.resources[resourceName] == 99 then
        Argo.ui[resourceName .. '_button']:setFontSize(40)
        Argo.ui[resourceName .. '_button']:setWidth(55)
    end
    Argo.ui[resourceName .. '_button']:setText(Argo.resources[resourceName])
    
    Log:debug('Resource %s set to %s', resourceName, Argo.resources[resourceName])
end

function Argo.setResourceNote(resourceName, line, value)
    if Argo.resources[resourceName .. '_note'] == nil then return end

    Argo.resources[resourceName .. '_note'][line] = value
    Log:debug('Note for resource %s set to %s', resourceName, Argo.resources[resourceName .. '_note'][line])
end

