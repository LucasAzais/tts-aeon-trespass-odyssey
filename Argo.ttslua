                            end })
        Argo.ui.map_tile_input = Argo.ui.main_panel:input({ id = 'map-tile-input', width = 150, height = 60, x = -530, y = 547,
                            fontSize = 50, placeholder = ' ', text = Argo.map_tile, colors = Ui.TRANSPARENT_INPUT_COLORS,
