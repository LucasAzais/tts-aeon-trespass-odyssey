                                                        end)
                                                    end
                                                end
                                            end })
                end

                if level[Constants.LABYRINTHAUROS] ~= nil then
                    y = yStart - 30
                    Argo.ui['evolution_' .. index .. '_' .. Constants.LABYRINTHAUROS .. '_checkbox'] = 
                                Argo.ui.main_panel:checkbox({ id = 'evolution-' .. index .. '-' .. Constants.LABYRINTHAUROS .. '-checkbox',
