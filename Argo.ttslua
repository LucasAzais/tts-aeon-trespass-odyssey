    Argo.uiRoot:wipe()
    Argo.ui = {}

    Argo.argo_sheet.UI.setCustomAssets(Constants.CUSTOM_ASSETS)

    if cycle == Constants.CYCLE_I then
        Argo.ui.main_panel = Argo.uiRoot:panel({ id = 'global-panel', width = 4000, height = 3000 })
        -- panel.attributes.color = 'Green'
        
