        -- Boss primordial track
        local xStart = 332
        local yStart = 17
        for index = 1, 4 do
            Argo.ui['boss_'..index..'_checkbox'] = Argo.ui.main_panel:checkbox({ id = 'boss-' .. index .. '-checkbox',
